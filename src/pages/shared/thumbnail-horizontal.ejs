<div class="thumbnail-horizontal-item">
    <article>
        <div class="thumbnail-horizontal-item__picture">
            <img src="<%= data.src %>" alt="<%= data.name %>">
        </div>
        <div class="thumbnail-horizontal-item__text">
            <div>
                <h3>
                    <%= data.name %>
                </h3>
                <p>
                    <%= data.desc %>
                </p>
            </div>
        </div>
    </article>

</div>